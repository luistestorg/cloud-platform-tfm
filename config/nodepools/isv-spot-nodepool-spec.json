{
  "spec": {
    "weight": 100,
    "disruption": {
      "consolidationPolicy": "WhenUnderutilized",
      "expireAfter": "Never"
    },
    "template": {
      "metadata": {
        "labels": {
          "eks.amazonaws.com/capacityType": "SPOT",
          "node-role": "autoscaled-ondemand-isv"
        }
      },
      "spec": {
        "taints": [
          {
            "key": "nativelink/tolerates-spot",
            "value": "true",
            "effect": "NoSchedule"
          }
        ],
        "nodeClassRef": {
          "name": "inst-store-vol-nodeclass"
        },
        "requirements": [
          {
            "key": "karpenter.k8s.aws/instance-family",
            "operator": "In",
            "values": ["r6id","m6id","c6id","r7gd","m7gd","c7gd"]
          },
          {
            "key": "karpenter.k8s.aws/instance-size",
            "operator": "In",
            "values": ["large","xlarge","2xlarge","4xlarge","8xlarge"]
          },
          {
            "key": "karpenter.sh/capacity-type",
            "operator": "In",
            "values": [
              "spot"
            ]
          },
          {
            "key": "kubernetes.io/arch",
            "operator": "In",
            "values": ["amd64","arm64"]
          }
        ]
      }
    }
  }
}
